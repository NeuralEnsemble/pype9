                             {% if reltol %}{{reltol}}{% else %}1e-7{% endif %}, 1.0, 0.0);
    
   if ( B_.e_ == 0 )  
     B_.e_ = gsl_odeiv2_evolve_alloc(B_.N);
   else 
     gsl_odeiv2_evolve_reset(B_.e_);
   
